		}
		
		if(x+width > Game.WIDTH) {
			x = Game.WIDTH - width;
		} else if(x < 0) {
			x = 0;
		}
	}
	
	public void render(Graphics g) {
		g.setColor(Color.pink);
		g.fillRect(x, y, width, height);
		g.fillRect(x-5, y+5, 15, 5);
	}
	*/
}
