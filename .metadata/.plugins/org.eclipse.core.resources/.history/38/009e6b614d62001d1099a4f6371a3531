package br.com.alexsandro.gamepebolim.players;

import java.awt.image.BufferedImage;

import br.com.alexsandro.gamepebolim.Game;

public class GoalkeeperA extends Entity {

	public int width, height;
	public boolean up = false, down = false, left = false, right = false;

	public static boolean dir;
	public static boolean right_dir;
	public static boolean left_dir;
	
	public static BufferedImage[] rightKeeperA;
	public static BufferedImage[] leftKeeperA;

	public GoalkeeperA(int x, int y, int width, int height, BufferedImage sprite) {
		super(x, y, width, height, sprite);

		rightKeeperA = new BufferedImage[4];
		leftKeeperA = new BufferedImage[4];
		
		for (int i = 0; i < 4; i++) {
			rightKeeperA[i] = Game.sprite.getSprite(0 + (i * 16), 32, 16, 16);
		}
		for (int i = 0; i < 4; i++) {
			leftKeeperA[i] = Game.sprite.getSprite(0 + (i * 16), 32, 16, 16);
		}
	}

	public void tick() {
		if (up == true) {
			y--;
		} else if (down == true) {
			y++;
		}else if(right == true) {
			right_dir = true;
		}else if(left == true) {
			left_dir = true;
		}
	}

}
