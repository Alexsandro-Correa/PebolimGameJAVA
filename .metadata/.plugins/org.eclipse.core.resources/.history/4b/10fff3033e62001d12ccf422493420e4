package br.com.alexsandro.gamepebolim.players;

import java.awt.image.BufferedImage;

public class Player extends Entity {

	public int width, height;
	public boolean up = false, down = false;

	public Player(int x, int y, int width, int height, BufferedImage sprite) {
		super(x, y, width, height, sprite);
	}

	public void tick() {
		if (up == true) {
			y--;
		} else if (down == true) {
			y++;
		}
	}

	/*
	 * public void tick() { if(right == true) { x = 25; }else if(right == false){ x
	 * = 15; }
	 * 
	 * if(x+width > Game.WIDTH) { x = Game.WIDTH - width; } else if(x < 0) { x = 0;
	 * } }
	 * 
	 * public void render(Graphics g) { g.setColor(Color.pink); g.fillRect(x, y,
	 * width, height); g.fillRect(x-5, y+5, 15, 5); }
	 */
}
